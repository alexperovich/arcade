<Window x:Class="Microsoft.DotNet.SwaggerGenerator.LinqPad.ConnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Swagger Api Connection"
    Background="{x:Static SystemColors.ControlBrush}"
    SizeToContent="Height"
    Width="400" 
    WindowStartupLocation="CenterScreen">
  <StackPanel Margin="12">
		<Label Padding="0,0,0,2">Swagger Api Uri</Label>
		<TextBox Padding="2" Margin="0,1,0,9" Text="{Binding Uri}"/>
		<DockPanel LastChildFill="False" Margin="0,15,0,0">
			<Button DockPanel.Dock="Right" Content="Cancel" Margin="6,0,0,0" Padding="10,3" MinWidth="60" IsCancel="True" TabIndex="2" />
			<Button DockPanel.Dock="Right" Content="OK" Margin="6,0,0,0" Padding="10,3" MinWidth="60" IsDefault="True" TabIndex="1" Click="OKClick" />
		</DockPanel>
  </StackPanel>
</Window>
